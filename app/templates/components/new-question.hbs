{{#if addNewQuestion}}
  <h1>New question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="asked">Question</label>
        {{input value=asked id="asked"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New question</button>
{{/if}}
